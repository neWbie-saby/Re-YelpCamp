<% include ../partials/upper %>

<div class='container'>
	<h1 style='text-align: center; padding-bottom: 10px;'>Edit '<%= camp.name%>' :-</h1>
	<div style='width: 30%; margin: 0 auto;'>
		<form action='/campgrounds/<%= camp._id %>?_method=PUT' method='POST'>
			<div class='form-group'>
				<input class='form-control' type='text' value='<%= camp.name %>' name='edited[name]'>
			</div>
			<div class='form-group'>
				<input class='form-control' type='text' value='<%= camp.image %>' name='edited[image]'>
			</div>
			<div class='form-group'>
				<input class='form-control' type='text' value='<%= camp.description %>' 
					   name='edited[description]'>
			</div>
			<div class='form-group'>
				<input class='form-control' type='number' value='<%= camp.price %>' name='edited[price]' 
					   min='20.00' step='0.50'>
			</div>
			<div class='form-group'>
				<button class='btn btn-lg btn-default btn-primary btn-block'>Submit</button>
			</div>
		</form>
		<a href='/campgrounds/<%= camp._id %>'>Go Back?</a>
	</div>	
		
</div>

<% include ../partials/lower %>