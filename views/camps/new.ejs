<% include ../partials/upper %>

<div class='container'>
	<h1 style='text-align: center; padding-bottom: 10px;'>(Create)Enter a New Campground :-</h1>
	<div style='width: 30%; margin: 0 auto;'>
		<form action='/campgrounds' method='POST'>
			<div class='form-group'>
				<input class='form-control' type='text' placeholder='Name' name='campname'>
			</div>
			<div class='form-group'>
				<input class='form-control' type='text' placeholder='Image URL' name='image'>
			</div>
			<div class='form-group'>
				<input class='form-control' type='text' placeholder='Description' name='description'>
			</div>
			<div class='form-group'>
				<input class='form-control' type='number' placeholder='Price' name='price' min='20.00' 
					   step='0.50'>
			</div>
			<div class='form-group'>
				<button class='btn btn-lg btn-default btn-primary btn-block'>Submit</button>
			</div>
		</form>
		<a href='/campgrounds'>Go Back?</a>
	</div>	
		
</div>

